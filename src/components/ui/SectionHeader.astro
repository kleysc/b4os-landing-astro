---
export interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className = '' } = Astro.props;
---

<header class={`section-header ${className}`}>
    <h2 class="section-title">{title}</h2>
    {subtitle && (
        <p class="section-subtitle">
            {subtitle}
        </p>
    )}
</header>
