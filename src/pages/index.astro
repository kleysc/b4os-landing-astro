---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components'

// Metadata específica para la página de inicio
const pageTitle = "B4OS 2025 - Programa Gratuito de Formación Bitcoin para Desarrolladores Senior | Bitcoin 4 Open Source";
const pageDescription = "Únete al programa B4OS 2025: formación gratuita e intensiva en Bitcoin Core y Lightning Network para desarrolladores senior de América Latina, Caribe y España. Registro abierto agosto 2025.";
const pageKeywords = "B4OS 2025, programa Bitcoin desarrolladores, formación Bitcoin gratuita, Bitcoin Core desarrollo, Lightning Network, desarrolladores senior, América Latina Bitcoin, Bitcoin España, residencias Bitcoin, mentoría Bitcoin, FOSS Bitcoin";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogImage="/og-image-home.jpg"
>
    <!-- Header / Navigation con mejoras SEO -->
    <header class="header" role="banner">
        <nav class="nav" role="navigation" aria-label="Navegación principal">
            <div class="nav-container">
                <div class="nav-brand">
                    <a href="#inicio" class="nav-link" aria-label="Ir al inicio de B4OS">
                        <img src="/b4os.png" alt="B4OS - Bitcoin 4 Open Source Logo" class="logo" width="64" height="64">
                    </a>
                </div>
                <div class="nav-menu" id="navMenu">
                    <a href="#objectives" class="nav-link">Objetivos</a>
                    <a href="#alumni" class="nav-link">Alumnos</a>
                    <a href="#residencias" class="nav-link">Residencias</a>
                    <a href="#cronograma" class="nav-link">Cronograma</a>
                    <a href="#registro" class="nav-link">Registro</a>
                    <a href="#beneficios" class="nav-link">Beneficios</a>
                    <a href="#alianzas" class="nav-link">Alianzas</a>
                    <a href="#contacto" class="nav-link">Contacto</a>
                </div>
                <button class="nav-toggle" id="navToggle" aria-label="Abrir menú de navegación" aria-expanded="false">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </nav>
    </header>

    <!-- Sección Prueba -->
    <section id="inicio" class="hero-section">
        <div class="hero-container">
            <!-- Contenido del lado izquierdo -->
            <div class="hero-content">
                <h1 class="hero-title-main">Bitcoin 4 Open Source</h1>
                <h2 class="hero-title">
                        <span class="hero-title-sub">Programa gratuito de entrenamiento técnico en Bitcoin para desarrolladores</span>
                </h2>
                <p class="hero-description">
                    Únete a nuestra comunidad de desarrolladores Bitcoin y comienza tu journey en el ecosistema de código abierto.
                </p>
                <div class="hero-actions">
                    <a href="#registro" class="btn btn-primary" rel="nofollow">Aceptar el Reto</a>
                    <a href="#residencias" class="btn btn-secondary">Conocer las Residencias</a>
                </div>
            </div>
            
            <!-- Imagen de fondo (se maneja con CSS) -->
            <div class="hero-background" aria-hidden="true"></div>
        </div>
    </section>

    <!-- Hero Section con mejoras SEO -->
    <section id="objectives" class="objectives">
        <div class="container">
            <div class="objectives-content">
                <div class="objectives-media">
                    <img src="images/laptop-code-1.jpg" 
                        alt="Desarrolladora trabajando en Bitcoin"
                        loading="eager"
                        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                </div>

                <div>
                    <h3 class="objectives-title-stats">
                        B4OS ofrece rutas de aprendizaje especializadas, 
                        permitiendo a los devs enfocarse en las áreas de mayor demanda
                    </h3>
                </div>


                <div class="program-grid">
                    <div class="program-card">
                        <div class="program-icon" aria-hidden="true">
                            <Icon name="mdi:weight-lifter" size={64} />
                        </div>
                        <h3>Despierta tu potencial</h3>
                        <p>
                            Rétate con nuestros challenges y descubre tus habilidades ocultas en el 
                            complejo protocolo de Bitcoin. Te guiaremos con cursos y seminarios para que puedas contribuir 
                            eficazmente a Bitcoin y Lightning.
                        </p>
                    </div>
                    <div class="program-card">
                        <div class="program-icon" aria-hidden="true">
                            <Icon name="mdi:hand-peace" size={128} />
                        </div>
                        <h3>Open Source y Libertad</h3>
                        <p>
                           Aprende a contribuir en código abierto como los líderes de Linux, Google o la mejores empresas 
